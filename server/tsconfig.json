{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2017",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "paths": {
      "#core/*": ["./core/*"],
      "#api:auth/*": ["./api/features/auth/*"],
      "#api/*": ["./api/*"],
      "#root/*": ["./*"],
      "#shared/*": ["../../shared/src/*"],
      "#assets/*": ["./assets/*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "references": [
    { "path": "../shared/tsconfig.json" }
  ]
}