{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2017",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "baseUrl": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
  },
  "references": [
    {
      "path": "apps/client"
    },
    {
      "path": "apps/server"
    },
    {
      "path": "packages/shared"
    }
  ]
}