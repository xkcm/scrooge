{
  "name": "@scrooge/server",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "xkcm",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prod:build": "rm -rf ./dist && SCROOGE_CWD=$PWD NODE_ENV=prod tsc",
    "prod:run": "SCROOGE_CWD=$PWD NODE_ENV=production node dist/app.js",
    "dev:run-build": "SCROOGE_CWD=$PWD NODE_ENV=development node dist/app.js",
    "dev:run": "SCROOGE_CWD=$PWD NODE_ENV=development node --loader tsx src/app.ts",
    "dev:build": "sh ./devtools/dev:build.sh",
    "dev:watch": "nodemon -x \"pnpm dev:run\" -w \"./src/**/*\" -w \"../shared/src/**/*\" -e \"ts js json\"",
    "dev:migrate": "dotenv -e .env.dev -- pnpm exec prisma migrate dev --name postgress-init",
    "dev:migrate/reset": "rm -rf ./prisma/migrations && pnpm dev:migrate",
    "dev:generate-prisma-client": "dotenv -e .env.dev -- pnpm exec prisma generate",
    "dev:integrate-path-aliases": "node ./devtools/dev:integrate-path-aliases.js",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint . --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@scrooge/shared": "workspace:^",
    "axios": "^1.3.2",
    "bcrypt": "^5.1.0",
    "chalk": "4.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ipaddr.js": "^2.0.1",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "nodemailer": "^6.9.1",
    "redis": "^4.6.3",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typescript": "^5.1.6",
    "winston": "^3.8.2",
    "yamljs": "^0.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.3",
    "@types/mustache": "^4.2.2",
    "@types/node": "^18.11.17",
    "@types/nodemailer": "^6.4.7",
    "@types/yamljs": "^0.2.31",
    "dotenv-cli": "^6.0.0",
    "nodemon": "^2.0.20",
    "prisma": "5.0.0",
    "tsx": "^3.12.7"
  },
  "imports": {
    "#core/*": "./dist/core/*",
    "#api:auth/*": "./dist/api/features/auth/*",
    "#api/*": "./dist/api/*",
    "#root/*": "./dist/*",
    "#assets/*": "./dist/assets/*"
  }
}