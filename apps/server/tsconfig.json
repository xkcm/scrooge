{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "preserveSymlinks": true,
    "outDir": "dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "paths": {
      "#core/*": ["./core/*"],
      "#api:auth/*": ["./api/features/auth/*"],
      "#api/*": ["./api/*"],
      "#root/*": ["./*"],
      "#assets/*": ["./assets/*"]
    }
  },
  "include": ["./src/**/*"]
}
