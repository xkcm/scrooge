{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "declaration": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": false,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "@features/*": ["./src/features/*"],
      "@shared/*": ["../shared/src/*"],
      "@core/*": ["./src/features/core/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
